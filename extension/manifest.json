{
  "manifest_version": 3,
  "name": "MCPX Connector",
  "version": "1.0",
  "description": "Connects to MCPX WS server and handles snapshot requests",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "offscreen",
    "debugger",
    "tabCapture"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"]
}
